#include <stdio.h>

typedef struct Position {
    int x;
    int y;
} Position;

typedef enum BoatOrientation {
    BOAT_HORIZONTAL,
    BOAT_VERTICAL
} BoatOrientation;

typedef struct Boat {
    Position position;
    int length;
    int orientation;
} Boat;

void init_board(char board[10][10]) {
    int i, j;
    for (i = 0; i < 10; i++) {
        for (j = 0; j < 10; j++) {
            board[i][j] = '.';
        }
    }
}

void place_boat(char board[10][10], int length, char symbole) {
    int x, y;
    char dir;

    printf("Entrez la position de depart (x y) du bateau de taille %d : ", length);
    scanf("%d %d", &x, &y);
    printf("Orientation (H pour horizontal, V pour vertical) : ");
    scanf(" %c", &dir);

    int i;
    if (dir == 'H' || dir == 'h') {
        for (i = 0; i < length; i++) {
            board[y][x + i] = symbole;
        }
    } else if (dir == 'V' || dir == 'v') {
        for (i = 0; i < length; i++) {
            board[y + i][x] = symbole;
        }
    }
}

void afficherGrille(char board[10][10]) {
    int i, j;
    printf("    A B C D E F G H I J\n");
    for (i = 0; i < 10; i++) {
        printf("%2d ", i + 1);
        for (j = 0; j < 10; j++) {
            printf("%c ", board[i][j]);
        }
        printf("\n");
    }
}

int main() {
    char board[10][10];
    init_board(board);

    place_boat(board, 5, 'P');// Port avion
    place_boat(board, 4, 'C');// croiseur
    place_boat(board, 3, 'D'); // destroyeur
    place_boat(board, 2, 'T'); // torpilleur

    afficherGrille(board);

    return 0;
}
